<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dayText"
        android:layout_width="246dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="dayText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="171dp"
        android:layout_height="31dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="timeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayText" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="timeText"
        app:layout_constraintStart_toEndOf="@+id/timeText"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/entryButton"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="entryButton"
        app:layout_constraintStart_toEndOf="@+id/descriptionText"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/reminderButton"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Send Reminder"
        app:layout_constraintStart_toEndOf="@+id/entryButton"
        app:layout_constraintTop_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>